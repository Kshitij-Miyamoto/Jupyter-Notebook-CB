   "source": [
    "N = int(input(\"Enter the number : \"))\n",
    "sum = 0\n",
    "count = 0\n",
    "\n",
    "while N != 0:\n",
    "    rem = N % 10\n",
    "    sum = sum + rem\n",
    "    count = count + 1\n",
    "    N = N // 10  \n",
    "\n",
    "print(\"The sum of the digits is \",sum)\n",
    "print(\"The number of digits in the number are \", count)"
   ]
